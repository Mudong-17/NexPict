{
  "name": "nexpict",
  "version": "0.2.0",
  "description": "An Electron application with React and TypeScript",
  "homepage": "https://electron-vite.org",
  "license": "GPL-3.0-only",
  "author": "暮冬拾柒",
  "type": "module",
  "main": "./out/main/index.js",
  "scripts": {
    "build": "npm run typecheck && electron-vite build",
    "build:linux": "electron-vite build && electron-builder --linux",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "cz": "czg --config=czg.config.cjs",
    "dev": "electron-vite dev -w",
    "format": "prettier --write .",
    "gen:icon": "electron-icon-maker --input=resources/icon.png",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "start": "electron-vite preview",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-packagejson",
      "prettier-plugin-organize-imports",
      "prettier-plugin-prisma",
      "prettier-plugin-tailwindcss",
      "prettier-plugin-multiline-arrays"
    ],
    "printWidth": 120,
    "proseWrap": "never",
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "@fluentui/react-components": "^9.56.8",
    "@fluentui/react-icons": "^2.0.270",
    "@fluentui/react-nav-preview": "^0.10.6",
    "@hookform/resolvers": "^3.9.1",
    "@tanstack/react-router": "^1.95.1",
    "electron-log": "^5.2.4",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.1.7",
    "react-hook-form": "^7.54.2",
    "react-masonry-css": "^1.0.16",
    "resize-observer-polyfill": "^1.5.1",
    "zod": "^3.24.1",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.32.1",
    "@electron-toolkit/eslint-config-prettier": "^2.0.0",
    "@electron-toolkit/eslint-config-ts": "^2.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@tanstack/router-devtools": "^1.95.1",
    "@tanstack/router-plugin": "^1.95.1",
    "@types/node": "^20.14.8",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "czg": "^1.11.0",
    "dotenv": "^16.4.7",
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "electron-icon-maker": "^0.0.5",
    "electron-vite": "^2.3.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.3",
    "postcss": "^8.4.49",
    "prettier": "^3.3.2",
    "prettier-plugin-multiline-arrays": "^3.0.6",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-packagejson": "^2.5.6",
    "prettier-plugin-prisma": "^5.0.0",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.5.2",
    "vite": "^5.3.1"
  }
}
