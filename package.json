{
  "name": "nexpict",
  "private": true,
  "version": "100.0.0",
  "description": "奈图--超给力的图床上传工具！",
  "author": {
    "name": "暮冬拾柒",
    "email": "mudong17@protonmail.com"
  },
  "main": "out/electron/index.js",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "gen:icon": "electron-icon-maker --input=resources/icon.png",
    "make": "tsx scripts/make.ts",
    "make:mac": "tsx scripts/make.ts --platform mac",
    "make:win": "tsx scripts/make.ts --platform win",
    "make:linux": "tsx scripts/make.ts --platform linux",
    "cz": "czg --config=czg.config.cjs"
  },
  "devDependencies": {
    "czg": "^1.11.0",
    "electron-builder": "^25.1.8",
    "electron-icon-maker": "^0.0.5",
    "eslint": "^9.18.0",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "license": "GPL-3.0-only",
  "shamefully-hoist": true
}
